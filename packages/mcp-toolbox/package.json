{
  "name": "@xava-labs/mcp-toolbox",
  "version": "1.0.0",
  "description": "Hono websocket server with SQLite integration",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "send": "tsx send-message.ts",
    "test": "vitest run tests/websocket.test.ts",
    "docker:build": "docker build -f Dockerfile -t mcp-toolbox ../..",
    "docker:run": "docker run --rm -p ${PORT:-11990}:11990 -e PROXY_ID=local-test-id --add-host host.docker.internal:host-gateway -v $(pwd)/data:/app/packages/mcp-toolbox/data mcp-toolbox",
    "docker:dev": "docker-compose up --build",
    "docker:shell": "docker run --rm -it --entrypoint /bin/sh mcp-toolbox",
    "proxy:test": "tsx src/test-figma-mcp.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.12.0",
    "hono": "^4.6.1",
    "sqlite3": "^5.1.6",
    "ws": "^8.18.0",
    "zod": "^3.22.4",
    "@modelcontextprotocol/sdk": "^1.13.0"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "@types/ws": "^8.5.12",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5",
    "@vitest/ui": "^2.0.5",
    "@xava-labs/mcp": "file:../mcp"
  }
}