		"url": "https://github.com/xava-labs/typescript-agent-framework/issues"
	},
	"homepage": "https://xavalabs.com",
	"dependencies": {
		"@hono/node-server": "^1.8.2",
		"better-sqlite3": "^9.2.2",
		"hono": "^4.7.6",
		"zod": "^3.24.3"
	},
	"devDependencies": {
		"@types/better-sqlite3": "^7.6.9",
		"@types/node": "^20.9.0",
		"tsx": "^4.7.0",
