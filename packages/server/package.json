{
	"name": "@xava-labs/server",
	"version": "0.1.0",
	"description": "HTTP server with Hono web framework for MCP and package management endpoints",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist",
		"README.md",
		"Dockerfile"
	],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
